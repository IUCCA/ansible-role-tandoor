server {
  listen 80;
  server_name localhost;

  client_max_body_size 128M;

  # serve media files
  location {{ tandoor_path_prefix | regex_replace('/$', '') }}/media/ {
    alias /opt/recipes/mediafiles;
    add_header Content-Disposition 'attachment; filename="$args"';
  }
  # serve service worker under main path
  location {{ tandoor_path_prefix | regex_replace('/$', '')  }}//service-worker.js {
    alias /opt/recipes/staticfiles/vue3/service-worker.js;
 }
  # pass requests for dynamic content to gunicorn
  location {{ tandoor_path_prefix | regex_replace('/$', '') }}/ {
    proxy_set_header Host $http_host;
    proxy_pass http://localhost:8080;
    proxy_set_header X-Script-Name {{ tandoor_path_prefix | regex_replace('/$', '') }};
    proxy_cookie_path / {{ tandoor_path_prefix | regex_replace('/$', '') }};

    error_page 502 /errors/http502.html;
  }
}